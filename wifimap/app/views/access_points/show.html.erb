<%- model_class = AccessPoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ssid) %>:</strong></dt>
  <dd><%= @access_point.ssid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mac) %>:</strong></dt>
  <dd><%= @access_point.mac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:freq) %>:</strong></dt>
  <dd><%= @access_point.freq %></dd>
  <dt><strong><%= model_class.human_attribute_name(:capabilities) %>:</strong></dt>
  <dd><%= @access_point.capabilities %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              access_points_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_access_point_path(@access_point), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              access_point_path(@access_point),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
