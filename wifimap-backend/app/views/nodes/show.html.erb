<%- model_class = Node -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ssid) %>:</strong></dt>
  <dd><%= @node.ssid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mac) %>:</strong></dt>
  <dd><%= @node.mac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:capabilities) %>:</strong></dt>
  <dd><%= @node.capabilities %></dd>
  <dt><strong><%= model_class.human_attribute_name(:frequency) %>:</strong></dt>
  <dd><%= @node.frequency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:signal) %>:</strong></dt>
  <dd><%= @node.signal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lng) %>:</strong></dt>
  <dd><%= @node.lng %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lat) %>:</strong></dt>
  <dd><%= @node.lat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seencount) %>:</strong></dt>
  <dd><%= @node.seencount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updatecount) %>:</strong></dt>
  <dd><%= @node.updatecount %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              nodes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_node_path(@node), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              node_path(@node),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
